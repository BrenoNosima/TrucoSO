{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Truco Project",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g", // For debugging
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
